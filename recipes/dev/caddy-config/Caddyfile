import common.Caddyfile

# Curried snippets

(recipes-api-proxy) {
	import api-proxy {$RECIPES_IDENTITY_SERVICE_HTTP_HOST} {args[0]}
}

(recipes-admin-proxy) {
	import admin-proxy {$RECIPES_IDENTITY_SERVICE_HTTP_HOST} {args[0]}
}

# Subdomains

{$PROTOCOL}://{$RECIPES_DOMAIN} {
	reverse_proxy clients:5173
}

{$PROTOCOL}://auth.{$RECIPES_DOMAIN} {
	reverse_proxy clients:5173
}

{$PROTOCOL}://app.{$RECIPES_DOMAIN} {
	reverse_proxy clients:5173
}

{$PROTOCOL}://account.{$RECIPES_DOMAIN} {
	reverse_proxy clients:5173
}

{$PROTOCOL}://admin.{$RECIPES_DOMAIN} {
	reverse_proxy clients:5173
}

{$PROTOCOL}://recipes.{$RECIPES_DOMAIN} {
	import recipes-api-proxy {$RECIPES_SERVICE_HTTP_HOST}
}

{$PROTOCOL}://azurite.{$RECIPES_DOMAIN} {
	reverse_proxy azurite:10000 {
		header_up Host azurite:10000
		header_up X-Forwarded-Host {host}
	}
}

{$PROTOCOL}://identity.{$RECIPES_DOMAIN} {
	import identity {$RECIPES_DOMAIN} {$RECIPES_IDENTITY_SERVICE_HTTP_HOST}
}
